{
    "name": "CocoCarFocus",
    "device": 1,
    "seed": 2115,
    "save_cfg_dir": "res/focus/coco_focus_car/",
    "arch": {
        "type": "ResFocusNetwork",
        "args": {
            "threshold": 0.5,
            "backbone": "resnet18",
            "loss_lambda_tr": 1,
            "loss_lambda_sc": 1,
            "loss_lambda_rot": 1
        }
    },
    "data_loader": {
        "type": "FocusLoader",
        "args": {
            "images_dir": "data/processed/COCO-2017/CocoCarFocus/train/images",
            "batch_size": 32,
            "csv_path": "data/processed/COCO-2017/CocoCarFocus/train/labels.csv",
            "save_out_dir": "res/focus/coco_focus_car/trainer/labels/",
            "transform_mean": [
                0.4572,
                0.4423,
                0.4103
            ],
            "transform_std": [
                0.2577,
                0.2591,
                0.2712
            ],
            "shuffle": true,
            "validation_split": 0.15,
            "num_workers": 12,
            "labels": {
                "0": "none",
                "1": "car"
            },
            "tf_image_size": [
                640,
                640
            ],
            "balance_train": true,
            "balance_methods": [
                "undersample"
            ],
            "balance_max_multiplicity": 3
        },
        "class_weights": null
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003,
            "weight_decay": 0.0005,
            "amsgrad": true
        }
    },
    "metrics": [
        "focus_accuracy",
        "focus_recall",
        "focus_precision",
        "focus_f1",
        "mean_iou",
        "iou50_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 3,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "FocusTrainer",
        "epochs": 100,
        "save_dir": "res/focus/coco_focus_car/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 15,
        "tensorboard": false
    }
}