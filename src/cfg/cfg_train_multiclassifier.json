{
    "name": "CocoMultiClassifier",
    "device": 1,
    "seed": 42,
    "save_cfg_dir": "res/classifiers/coco_classifier_multi/",
    "arch": {
        "type": "ResNet34Classifier",
        "args": {
            "n_classes": 6,
            "class_weights": [
                0.33333333,
                0.4271424,
                2.52586565,
                10.87575135,
                11.75590098,
                11.63532764
            ]
        }
    },
    "data_loader": {
        "type": "ClassifierLoader",
        "args": {
            "images_dir": "data/processed/COCO-2017/CocoMultiClassifier/train/images",
            "batch_size": 128,
            "csv_path": "data/processed/COCO-2017/CocoMultiClassifier/train/labels.csv",
            "save_out_dir": "res/classifiers/coco_classifier_multi/trainer/labels/",
            "transform_mean": [
                0.4119,
                0.3770,
                0.3452
            ],
            "transform_std": [
                0.2832,
                0.2707,
                0.2711
            ],
            "shuffle": true,
            "validation_split": 0.25,
            "num_workers": 14,
            "balance_train": true,
            "balance_methods": [
                "oversample",
                "make_0_half"
            ],
            "balance_max_multiplicity": null,
            "labels": {
                "0": "none",
                "1": "person",
                "2": "bicycle",
                "3": "car",
                "4": "cat",
                "5": "dog"
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-05,
            "weight_decay": 0.0005,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss_weighted",
    "metrics": [
        "micro_accuracy",
        "micro_recall",
        "micro_precision",
        "micro_f1",
        "macro_accuracy",
        "macro_recall",
        "macro_precision",
        "macro_f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 100,
        "save_dir": "res/classifiers/coco_classifier_multi/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "max val_macro_precision",
        "early_stop": 10,
        "tensorboard": false
    }
}