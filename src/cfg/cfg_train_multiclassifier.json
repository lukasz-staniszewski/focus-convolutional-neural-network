{
    "name": "CocoMultiClassifier",
    "device": 1,
    "seed": 42,
    "save_cfg_dir": "res/classifiers/classifier_multi/",
    "arch": {
        "type": "ResNetFCClassifier",
        "args": {
            "n_classes": 6
        }
    },
    "data_loader": {
        "type": "MultiClassifierDataLoader",
        "args": {
            "images_dir": "data/processed/COCO-2017/CocoMultiClassifier/train/images",
            "batch_size": 64,
            "csv_path": "data/processed/COCO-2017/CocoMultiClassifier/train/labels.csv",
            "transform_mean": [
                0.5438,
                0.5786,
                0.6030
            ],
            "transform_std": [
                0.2944,
                0.2882,
                0.2966
            ],
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4,
            "balance_train": true,
            "balance_max_multiplicity": 35,
            "labels": {
                "0": "none",
                "1": "person",
                "2": "bicycle",
                "3": "car",
                "4": "cat",
                "5": "dog"
            }
        },
        "class_weights": [
            0.33463243,
            0.4254861,
            2.51605741,
            10.83436414,
            11.71213512,
            11.59208079
        ]
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-4,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss_weighted",
    "metrics": [
        "micro_accuracy",
        "micro_recall",
        "micro_precision",
        "micro_f1",
        "macro_accuracy",
        "macro_recall",
        "macro_precision",
        "macro_f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "res/classifiers/classifier_multi/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "max macro_precision",
        "early_stop": 10,
        "tensorboard": false
    }
}