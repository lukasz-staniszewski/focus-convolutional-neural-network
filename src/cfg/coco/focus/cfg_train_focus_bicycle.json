{
    "name": "CocoBicycleFocus",
    "device": 1,
    "seed": 188,
    "save_cfg_dir": "res/focus/coco_focus_bicycle/",
    "arch": {
        "type": "ResFocusNetwork",
        "args": {
            "threshold": 0.5,
            "backbone": "resnet34",
            "loss_lambda_tr": 8,
            "loss_lambda_sc": 8,
            "loss_lambda_rot": 3,
            "loss_weights": [
                9
            ],
            "inp_img_size": [
                640,
                640
            ]
        }
    },
    "data_loader": {
        "type": "FocusLoader",
        "args": {
            "images_dir": "data/processed/COCO-2017/CocoBicycleFocus/train_with_rot/images",
            "batch_size": 32,
            "csv_path": "data/processed/COCO-2017/CocoBicycleFocus/train_with_rot/labels.csv",
            "save_out_dir": "res/focus/coco_focus_bicycle/trainer/labels/",
            "transform_mean": [
                0.4686,
                0.4496,
                0.4134
            ],
            "transform_std": [
                0.2553,
                0.2530,
                0.2708
            ],
            "shuffle": true,
            "validation_split": 0.15,
            "num_workers": 12,
            "labels": {
                "0": "none",
                "1": "bicycle"
            },
            "tf_image_size": [
                640,
                640
            ],
            "balance_train": true,
            "balance_methods": [
                "undersample"
            ],
            "balance_max_multiplicity": 9
        },
        "class_weights": null
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-4,
            "momentum": 0.9,
            "weight_decay": 0.0
        }
    },
    "metrics": [
        "focus_accuracy",
        "focus_recall",
        "focus_precision",
        "focus_f1",
        "mean_iou",
        "iou50_accuracy"
    ],
    "lr_scheduler": null,
    "trainer": {
        "type": "FocusTrainer",
        "epochs": 100,
        "save_dir": "res/focus/coco_focus_bicycle/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 20,
        "tensorboard": false
    }
}