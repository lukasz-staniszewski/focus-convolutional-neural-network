{
    "name": "PascalPersonFocus",
    "device": 1,
    "seed": 188,
    "save_cfg_dir": "res/focus/pascal_focus_person/",
    "arch": {
        "type": "ResFocusNetwork",
        "args": {
            "threshold": 0.5,
            "backbone": "resnet34",
            "loss_lambda_tr": 12,
            "loss_lambda_sc": 12,
            "loss_lambda_rot": 3,
            "inp_img_size": [
                640,
                640
            ],
            "loss_rot": true
        }
    },
    "data_loader": {
        "type": "FocusLoader",
        "args": {
            "images_dir": "data/processed/PASCAL/PascalPersonFocus/train/images",
            "batch_size": 32,
            "csv_path": "data/processed/PASCAL/PascalPersonFocus/train/labels.csv",
            "save_out_dir": "res/focus/pascal_focus_person/trainer/labels/",
            "transform_mean": [
                0.4420,
                0.4245,
                0.3953
            ],
            "transform_std": [
                0.2601,
                0.2612,
                0.2696
            ],
            "shuffle": true,
            "validation_split": 0.15,
            "num_workers": 32,
            "labels": {
                "0": "none",
                "1": "person"
            },
            "tf_image_size": [
                640,
                640
            ],
            "balance_train": false
        },
        "class_weights": null
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-4,
            "momentum": 0.9,
            "weight_decay": 0.0
        }
    },
    "metrics": [
        "focus_accuracy",
        "focus_recall",
        "focus_precision",
        "focus_f1",
        "mean_iou",
        "iou50_accuracy"
    ],
    "lr_scheduler": null,
    "trainer": {
        "type": "FocusTrainer",
        "epochs": 100,
        "save_dir": "res/focus/pascal_focus_person/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 20,
        "tensorboard": false,
        "do_validation": true
    }
}