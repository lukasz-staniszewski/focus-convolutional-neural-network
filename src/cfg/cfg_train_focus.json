{
    "name": "CocoPersonFocus",
    "device": 1,
    "seed": 42,
    "save_cfg_dir": "res/focus/coco_focus_person/",
    "arch": {
        "type": "ResFocusNetwork",
        "args": {
            "threshold": 0.5,
            "backbone": "resnet34",
            "loss_lambda_tr": 12,
            "loss_lambda_sc": 14,
            "loss_lambda_rot": 10
        }
    },
    "data_loader": {
        "type": "FocusLoader",
        "args": {
            "images_dir": "data/processed/COCO-2017/CocoPersonFocus/train/images",
            "batch_size": 64,
            "csv_path": "data/processed/COCO-2017/CocoPersonFocus/train/labels.csv",
            "save_out_dir": "res/focus/coco_focus_person/trainer/labels/",
            "transform_mean": [
                0.4686,
                0.4496,
                0.4134
            ],
            "transform_std": [
                0.2553,
                0.2530,
                0.2708
            ],
            "shuffle": true,
            "validation_split": 0.15,
            "num_workers": 12,
            "labels": {
                "0": "none",
                "1": "person"
            },
            "tf_image_size": [
                650,
                650
            ]
        },
        "class_weights": null
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-04,
            "weight_decay": 0.0005,
            "amsgrad": false
        }
    },
    "metrics": [
        "focus_accuracy",
        "focus_recall",
        "focus_precision",
        "focus_f1",
        "mean_iou",
        "iou50_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "FocusTrainer",
        "epochs": 100,
        "save_dir": "res/focus/coco_focus_person/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 15,
        "tensorboard": false
    }
}