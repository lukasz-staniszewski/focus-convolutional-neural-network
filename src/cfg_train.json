{
    "name": "CocoMultiClassifier",
    "device": 0,
    "seed": 42,
    "save_cfg_dir": "res/classifiers/classifier_multi/",
    "arch": {
        "type": "ResNetFCClassifier",
        "args": {
            "n_classes": 6
        }
    },
    "data_loader": {
        "type": "ClassifierDataLoader",
        "args": {
            "images_dir": "data/processed/COCO-2017/CocoMultiClassifier/validate/images",
            "batch_size": 128,
            "csv_path": "data/processed/COCO-2017/CocoMultiClassifier/validate/labels.csv",
            "transform_mean": [
                0.5438,
                0.5786,
                0.6030
            ],
            "transform_std": [
                0.2944,
                0.2882,
                0.2966
            ],
            "shuffle": true,
            "validation_split": 0.15,
            "num_workers": 4,
            "balance": true,
            "is_multiclass": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "classifier_cross_entropy_loss",
    "metrics": [
        "micro_accuracy",
        "micro_recall",
        "micro_precision",
        "micro_f1",
        "macro_accuracy",
        "macro_recall",
        "macro_precision",
        "macro_f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "res/classifiers/classifier_multi/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}